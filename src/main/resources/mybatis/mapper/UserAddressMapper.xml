<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bc.mall.v2.server.mapper.UserAddressMapper">

    <resultMap id="userAddress" type="com.bc.mall.v2.server.entity.UserAddress">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="province" property="province" jdbcType="VARCHAR"/>
        <result column="city" property="city" jdbcType="VARCHAR"/>
        <result column="district" property="district" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="is_default" property="isDefault" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="addUserAddress" parameterType="com.bc.mall.v2.server.entity.UserAddress">
        insert into t_user_address
        (
        id,
        user_id,
        name,
        phone,
        province,
        city,
        district,
        address,
        is_default,
        create_time
        )
        values
        (
        #{id},
        #{userId},
        #{name},
        #{phone},
        #{province},
        #{city},
        #{district},
        #{address},
        #{isDefault},
        now()
        )
    </select>

    <select id="getUserAddressList" parameterType="String" resultMap="userAddress">
        select
        *
        from t_user_address
        where user_id = #{userId}
        order by create_time desc
    </select>

    <delete id="deleteUserAddress" parameterType="String">
        delete
        from t_user_address
        where id = #{addressId}
    </delete>

    <update id="updateUserAddress" parameterType="com.bc.mall.v2.server.entity.UserAddress">
        update t_user_address
        set
        name = #{name},
        phone = #{phone},
        province = #{province},
        city = #{city},
        district = #{district},
        address = #{address},
        is_default = #{isDefault}
        where id = #{id}
    </update>
</mapper>